programa
{
	
	funcao inicio()
	{
		cadeia dia[31] = {"O monarca","A piranha","O padrasto","O famoso","A prostituta","O cosplayer","O nerd","A princesa","O morto","O cafetão","O programador","O cineasta","O professor","O fantasma","O estudante","A mulher","O poderoso","A famosa","A gigante","O monstro","A dona","O mecânico","o cirurgião","O antigo","A Surfista","O herói","A esteticista","O maluco","A Magnifica","O estiloso","O irritante"}

		cadeia mes[12]={"comedor(a)","matador(a)","aconselhador(a)","fazedor(a)","morador(a)","ladra(o)","consumidor(a)","limpador(a)","assistente","amansador(a)","amante","batedor(a)"}
	
	     cadeia ano[10]={"de baratas","de idosas","de prostitutas","de jogadores de futebol","de esquizofrênicos","de masoquistas","de fuscas","de abortos","de desenhos animados","de cabeludos"}

		escreva("========QUAL É O NOME DO FILME DA SUA VIDA======== \n\n")

		inteiro respDia, respMes, respAno
		


          
		escreva("Digite o DIA do seu nascimento: ")
		leia(respDia)

          enquanto(respDia>31 ou respDia<1){
          escreva("Data inválida. Tente novamente: ")
          leia(respDia)}

		escreva("Digite o MÊS do seu nascimento: ")
		leia(respMes)

          enquanto(respMes>12 ou respMes<1){
          escreva("Mês inválido. Tente novamente: ")
          leia(respMes)}

		escreva("Digite o ÚLTIMO digito do ANO do seu nascimento: ")
		leia(respAno)

          enquanto(respAno>9 ou respAno<0){
          escreva("Ano inválido. Escreva ÚLTIMO DÍGITO DO ANO DE MASCIMENTO! Tente novamente: ")
          leia(respAno)}

		
		enquanto(respDia>29 e respMes == 2){
			escreva("Essa data é inválida! Tente novamente.\n")

			
		escreva("Digite o DIA do seu nascimento: ")
		leia(respDia)

          enquanto(respDia>31 ou respDia<1){
          escreva("Data inválida. Tente novamente: ")
          leia(respDia)}

		escreva("Digite o MÊS do seu nascimento: ","\n")
		leia(respMes)}


          escreva("\n\n",dia[respDia-1]," ",mes[respMes-1]," ",ano[respAno],"\n\n")
	}
}
